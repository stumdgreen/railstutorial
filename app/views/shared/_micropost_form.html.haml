= form_for(@micropost) do |f|
  = render 'shared/error_messages', object: f.object
  .field
    = f.text_area :content, placeholder: "Compose a new micropost..."
  %p.characters_left
    %span= Micropost::MAXIMUM_CHARACTERS
    characters left
  = f.submit "Post", class: "btn btn-large btn-primary"
