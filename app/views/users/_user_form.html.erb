<% submit_text ||= "Create my account" %>
<%= form_for(@user) do |f| %>

  <%= render 'shared/error_messages' %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, "Confirmation" %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit submit_text, id: "submit_user_form", class: "btn btn-large btn-primary" %>
<% end %>

